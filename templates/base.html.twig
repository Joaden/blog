                <a class="dropdown-item" href="{{path('contact')}}">Separated link</a>
                </div>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="{{path('blog')}}">Articles</a>
            </li>
            
            {% if app.user %}

            <li class="nav-item">
                <a class="nav-link" href="{{path('blog_create')}}">Créer un article</a>
            </li>
            <li class="nav-item" style="background-color: ;">
                <a href="#" class="nav-link" style="background-color: #;">Mes messages</a>
            </li>
            
            <li class="nav-item">
                <a class="nav-link" href="{{path('account')}}">Mon compte</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{path('security_logout')}}">Se déconnecter</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="#" style="background-color: #;" style="text-shadow: 1px 2px 2px #1C6EA4;">Bienvenue {{ app.user.username }}</a>
            </li>
            
            {% else %}

            <li class="nav-item">
                <a class="nav-link" href="{{ path('security_registration') }}">S'inscrire</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="{{path('security_login')}}">Se connecter</a>
            </li>
            
            {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item" style="text-shadow: 1px 2px 2px #FFBF00;">
                    <a class="nav-link" href="#" style="text-shadow: 1px 2px 2px #FFBF00;">Gérer les articles</a>
                </li>
                <li class="nav-item" style="text-shadow: 1px 2px 2px #FFBF00;">
                    <a class="nav-link" href="#" style="text-shadow: 1px 2px 2px #FFBF00;">Gérer les utilisateurs</a>
                </li>
                <li class="nav-item">
                <a class="nav-link" href="#" style="background-color: #;" style="text-shadow: 1px 2px 2px #1C6EA4;">Bienvenue {{ app.user.username }}</a>
                </li>
            {% endif %}
            
            {% endif %}
        </ul>
