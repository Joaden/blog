        <link rel="stylesheet" href="{{ ('css/app.css') }}">

        {% block stylesheets %}
            <link rel="stylesheet" href="{{ ('css/app.css') }}">
        {% endblock %}
    </head>
    <body>

    {% block body %}

        {% include 'header.html.twig' %}

        {% if app.user %}
            <div class="container">
                <h3 class="text-success">Vous êtes bien connecté!</h3>
                {#{% block body %}{% endblock %}#}
