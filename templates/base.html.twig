        {% else %}
            <div class="container">
                <h3 class="text-danger" >Vous n'etes pas connecté!</h3>
            </div>
        {% endif %}


            {% set show = "" %}
            {% if show is defined %}
                    {#{% include 'header.html.twig' %}#}

                {% set design = "Design<br />" %}
                {{ true ? design : "<br />Twig is true" }}   {# will be escaped #}
                {{ false ? design : "<br />Twig is false" }}   {# won't be escaped #}

            {% endif %}


        {% block footer %}

